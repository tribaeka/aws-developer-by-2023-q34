# editorconfig.org

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,ts,tsx,yml,json}]
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true

[*.{js,ts,tsx}]
max_line_length = 120

[*.md]
indent_size = 4
trim_trailing_whitespace = false
max_line_length = 0
